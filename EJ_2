//Escribe una funci√≥n recursiva que calcule la suma de los primeros n enteros positivos. 
//Por ejemplo, n=4 es 1+2+3+4=10.

package Recursividad;
public class NumNaturales {
    public static void main(String[] args) {
        int i = 5;
        int result = sumatoria(i);
        System.out.println("La suma de los primeros 5 numeros reales es de: " + result );
    }

    public static int sumatoria (int i){
        
        if (i <0){
            System.out.println("Fuera de rango");
            return 0;
        }
        else {
            return i + sumatoria(i-1);
        }
    }
}
