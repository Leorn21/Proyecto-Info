//2. Implementar función que reciba un array y que lo muestre en pantalla.
package Ordenamiento;

public class EJ2 {
    public static void main(String[] args) {
        int array [] = {16, 9, 20, 4, 44, 7, 1, 3}; //Se inicializa el arreglo pedido
        print(array); //LLamado e impresión de la funcion "print"
        shellsort(array); //Llamado e impresion de la funcion shellsort 
    }

    public static void print (int []array){ //Imprime el array
        System.out.println("\n***ARRAY SIN ORDENAR***\n");
        for(int i = 0; i < array.length; i++){
            System.out.print("\t"+ array[i]);
        }
        System.out.println("\n");
    }

    public static void shellsort (int [] array){ //Ordena con el metodo shellsort el array, e imprime el array
        int n = array.length;
        int gap, i, j, temp;
        for (gap = n /2; gap > 0; gap /= 2){ ///Se reduce el gap en cada iteración
            for (i = gap; i < n; i++){
                for (j = i-gap; j>= 0 && array[j]>array[j+gap]; j-=gap){
                    //Se intercambia si el elemento actual es mayor que el desplazado por gap
                    temp = array[j];
                    array[j] = array[j + gap];
                    array[j + gap] = temp;
                }
            }
        }
        System.out.println("\n***ARRAY ORDENADO***\n"); //Imprime el array ordenado
        for(i = 0; i < array.length; i++){
            System.out.print("\t"+ array[i]);
        }
        System.out.println("\n");
    }
}
