//Escriba un método recursivo que devuelva el número de unos en la representación
//binaria de N. Use el hecho de que es igual al número de unos en la representación
//binaria de N/2, más 1 si N es impar.

package Recursividad;
public class Binario {
    public static void main(String[] args) {
        int n = 10;
        System.out.println("Número en decimal: " + n);
        System.out.println("Número en binario: " + binario(n));
    }

    public static String binario(int n) {
        // Caso base: si n es 0, la representación binaria es "0"
        if (n == 0) {
            return "0";
        }
        // Caso recursivo: llama a binario(n/2) y añade el bit correspondiente (0 o 1)
        return binario(n / 2) + (n % 2);
    }
}
